<table>
	<col style="width:40%"/>
	<col style="width:40%"/>
	<col style="width:20%"/>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>type</th>
    </tr>
    <% if @folder %>
      <% @folder.each do |child| %>
      <tr>
        <td style="width:800px"><%=child['id']%></td>
        <td><%= 
          case child['type']
          when "folder"
            link_to(child['name'], :action => 'show', :id => child['id']) 
          when "dataset"
            link_to(child['name'], :action => 'dataset', :id => child['id'])
          else
            child['name']
          end
        %></td>
        <td><%=child['type']%></td>
      </tr>
        <% end %>
      <% end %>
</table>
<% if @error %>
  <pre>
    <%= @error %>
  </pre>
<% end %>
